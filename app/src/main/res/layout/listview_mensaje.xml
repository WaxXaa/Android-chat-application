<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/dwb4"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/card_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="17dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile1" />

    <LinearLayout
        android:id="@+id/card_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="12dp"
            android:text="Darlene Steward"
            android:textColor="#1B1A57"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pls take a look at the images."
            android:textColor="#4E5D7B"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>